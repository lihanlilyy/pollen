<% provide(:title, "Home") %>
<!DOCTYPE html>
<html>
    <head>
        <title><%= full_title(yield(:title)) %></title>
    </head>
    <br>
    <main class="wrapper">
        <div class = "homecontainer parallex">
            <%= image_tag("homepic.png", :class => "home_image") %>
            <h1 class = "left">
                <%= greet %> 
                <%= current_user.lastname %>
            </h1>
        </div>
    </main>
    <br>

    <aside class="col-md-4">
        <div class="row">
            <section class="user_info">
                <%= render 'shared/user_info' %>
            </section>
        </div>
    </aside>
    <div class="col-md-8 notifications">
        <h3>Notifications (<span data-behavior="unread-count">0</span>)</h3>
        <button data-behavior="notifications-link" id="clear">
            clear all
        </button>
        <ul data-behavior="notifications" class="notification-list">
            <li data-behavior="notification-items" class="notification-item">
            </li>
        </ul>
    </div>
        
</html>