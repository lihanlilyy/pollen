<% provide(:title, @title) %>
<!DOCTYPE html>
<html>
    <head>
    <title><%= full_title(yield(:title)) %></title>
    </head>
    <body>
    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <br>
                <br>
                <br>
                <%= render 'shared/user_info' %>
            </section>
        </aside>
        <aside class="col-md-8">
            <h3><%= @title %></h3>
            <% if @users.any? %>
                <section class="user_info">
                <% @users.each do |user| %>
                    <ol class="followers-and-following">
                        <%= render partial: 'shared/other_user_info', locals: {user: user} %>
                    </ol>
                <% end %>
                <%= will_paginate @users %>
            <% end %>
        </div>
    </div>
</html>
