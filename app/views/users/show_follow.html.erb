<% provide(:title, @title) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1><%= @user.firstname %></h1>
            <span><%= link_to "view my profile", @user %></span>
            <span><b>Posts:</b> <%= @user.forumposts.count %></span>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
    </aside>
    <div class="col-md-8">
        <h3><%= @title %></h3>
            <% if @users.any? %>
                <ul class="user_info">
                <section class="user_info">
                <% @users.each do |user| %>
                    <%= render 'shared/user_info_relationship' %>
                <% end %>
                </section>
                </ul>
                <%= will_paginate %>
            <% end %>
                </div>
</div>