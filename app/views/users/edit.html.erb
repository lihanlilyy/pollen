<html>
    <head>
        <% provide(:title, "edit user") %>
        <h1>update <%= current_user.lastname %>'s profile</h1>
    </head>

    <body>

        <%= form_with(model: @user, local: true) do |f| %>
            <table summary="Edit user form fields">
    
            <div class ="text-field">
                <label>
                    <%= f.label :firstname, 'First Name' %>
                </label>
                <%= f.text_field :firstname %></td>
            </div>

            <div class ="text-field">
                <label>
                    <%= f.label :lastname, 'Last Name' %>
                </label>
                <%= f.text_field :lastname %>
            </div>

            <div class ="text-field">
                <label>
                    <%= f.label :email, 'Email' %>
                </label>
                <%= f.email_field :email %>
            </div>

            <div class ="text-field">
                <label>
                    <%= f.label :password, 'Password' %>
                </label>
                <%= f.password_field :password %>
            </div>

            <div>
                <%= f.label :language, 'Languages spoken' %>
                <%= f.select :temp_id, [['English', 1], ['French', 2], ['German', 3], 
                    ['Spanish', 4], ['Korean', 5]], {class: 'collection-select-class'} %>
                <%= f.select :f_temp_id, [['Beginner', 1], ['Lower Intermediate', 2],
                    ['Upper Intermediate', 3], ['Advanced', 4], ['Native Speaker', 5]] %>
            </div>

            <br>
            <%= f.submit "Update User" %>
        <% end %>
    </body>
</html>