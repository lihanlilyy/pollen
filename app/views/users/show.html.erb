<% provide(:title, @user.firstname) %>
<!DOCTYPE html>
    <html>
        <head>
            <title><%= full_title(yield(:title)) %></title>
        </head>
        <div class="row">
            <aside class="col-md-4">
                <section class="user_info">
                    <h1>
                        <%= @user.firstname %> 
                        <%= @user.lastname %> 
                    </h1>
                </section>
            </aside>
        </div>
        <body>
            <%= @user.firstname %>, <%= @user.email %>
            <%= render 'follow_form' if logged_in? %>
        </body>
    </html>