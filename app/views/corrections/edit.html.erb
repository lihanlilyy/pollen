<html>
    <head>
        <% provide(:title, "Edit correction for: #{@correction.entry.title}") %>
        <h3>Edit correction for "<%= @correction.entry.title %>" </h3>
        <br>
    </head>
    <body>
        <%= form_with(model: @correction, local: true) do |f| %>
            <div class="tinymce-edit">
                <%= f.text_area(:content, :class => "tinymce", style: 'width:60%')%>
            <br>
            </div>
            <br>
            <div class = "text-field" %>
                <%= f.label :comment, "Comments (Optional)", class:"label-corrections"%>
                <br>
                <%= f.text_area :comment %>
            </div>
            <div class="futura-this">
                <%= f.check_box :correct, {class:"form-check-input", type:"checkbox"}, true, false %>
                <%= f.label :correct, "#{@correction.entry.journal.user.lastname}'s entry is perfect", class:"label-corrections"%>
            </div>
            <%= f.hidden_field :entry_id %>
            <%= hidden_field_tag :user_id, current_user.id%>
            <%= f.submit "Update Correction", class: "btn btn-primary" %>
        <% end %>
    </body>
</html>

<%= tinymce %>