<html>
    <head>
        <% provide(:title, "edit correction for: ${@correction.entry.title}") %>
        <h1>edit correction for<%= @correction.entry.title %> </h1>
    </head>
    <body>
        <%= form_with(model: @correction, local: true) do |f| %>
            <div class = "text-field" %>
                <%= f.label :content, "Content" %>
                <%= f.text_area(:content, :class => "tinymce")%>
            <br>
            </div>
            <div class = "text-field" %>
                <%= f.label :comment, "Comments (Optional)" %>
                <%= f.text_area :comment %>
            </div>
            <div>
                <%= f.label :correct, "This entry is correct"%>
                <%= f.check_box :correct, {class:"form-check-input", type:"checkbox"}, true, false %>
            </div>
            <%= f.hidden_field :entry_id %>
            <%= hidden_field_tag :user_id, current_user.id%>
            <%= f.submit "Update Correction", class: "btn btn-primary" %>
        <% end %>
    </body>
</html>

<%= tinymce %>