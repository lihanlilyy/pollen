<%= form_for(@journal) do |f| %>
    <div class="field">
        <div>
            <%= f.text_area :title, placeholder: "New Journal" %>
        </div>
        <div>
            <%= f.label :private, 'Privacy mode' %>
            <%= f.select :private, [['Private', true], ['Public', false]] %>
        </div>
        <%= f.submit "Create", class: "btn btn-primary" %>
    </div>
<% end %>