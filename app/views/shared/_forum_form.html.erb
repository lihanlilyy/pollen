<%= form_with(model: @forumpost, local: true) do |f| %>
    <div class="field">
    <section>
    <%= f.text_area :title, placeholder: "Add a title to post..." %>
    </section>
    <%= f.text_area :content, placeholder: "Compose new forumpost..." %>
    </div>
    <div>
        <%= f.text_field :tag_list, value: f.object.tag_list.to_s, placeholder: "Add tag e.g. grammar" %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>