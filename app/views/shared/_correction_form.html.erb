<%= form_for (@correction) do |f| %>
    <h3>Edit Content</h3>
    <div class = "text-field" %>
        <%= f.text_area(:content, :value => @entry.content, :class => "tinymce")%>
        <br>
    </div>

    <div class = "correction-form">
        <%= f.check_box :correct, {}, checked_value = "1",  unchecked_value = "0"%>
        <%= f.label :correct, "This entry is perfect"%>
    </div>
    
    <br>

    <div class = "correction-form">
        <%= f.label :comment, "Comments (Optional)"%>
        <%= f.text_area :comment, :rows => 3, style: 'width:80%' %>
    </div>

    <%= f.hidden_field :entry_id %>
    <%= hidden_field_tag :user_id, current_user.id%>

    <%= f.submit "Create" %>

<% end %>

<%= tinymce %>