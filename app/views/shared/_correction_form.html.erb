<%= form_for (@correction) do |f| %>
    <div class = "text-field"%>
        <% if @entry.corrections.any? %>
            <%= f.text_area(:content, :value => @entry.corrections.order("created_at").first.content, :rows => 8, style: 'width:90%')%>
        <% else %>
            <%= f.text_area(:content, :value => @entry.content, :rows => 8, style: 'width:90%')%>
        <% end %>
        <br>
        <br>
        <div class = "correction-form">
            <%= f.label :comment, "Comments (Optional)"%>
            <%= f.text_area :comment, :rows => 3, style: 'width:90%', :placeholder => "Provide explanations or advice..." %>
        </div>
        <%= f.submit "Submit" %>
    </div>


    <%= f.hidden_field :entry_id %>
    <%= hidden_field_tag :user_id, current_user.id%>
    <%= f.hidden_field :correct, :value => false %>

<% end %>

