<% provide(:title, "Forum") %>
<div class="row">
  <div class="col-md-8">
      <h3>Forum </h3>
  </div>
  <aside>
  <div class="col-md-8">
        <ou class="forumposts">
        <div>
            <h3>Title</h3>
            <span class="title"><%= @forumposts.title %></span>
        </div>
        <div>
            <h3>Content</h3>
            <span class="content"><%= @forumposts.content %></span>
        </div>
        <div>
            <h3>Reply count</h3>
            <span class="content"><%= @forumposts.commentforums.count %></span>
            <h3>Comments</h3>
            <% @forumposts.commentforums.each do |l| %>
                <div>
                <h4><%= l.reply %><h4>
                </div>
                <span class="timestamp">
                <h6>Replied at <%= time_ago_in_words(l.created_at) %> ago.</h6>
                </span>
            <% end %>
        </div>
  </div>
  </aside>
  <h3>Reply to thread </h3>
            <%= render 'commentforums/form' %>
</div>